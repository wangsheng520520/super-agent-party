{
  "name": "super-agent-party",
  "version": "v0.3.2",
  "description": "超级智能体派对v 0.3.2 | 轻松链接一切!",
  "main": "main.js",
  "asar": false,
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder -mwl",
    "build:win": "electron-builder -w",
    "build:mac": "electron-builder -m",
    "build:linux": "electron-builder -l",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "AI",
    "Multi-Agent",
    "Productivity",
    "Automation",
    "MCP",
    "A2A"
  ],
  "author": {
    "name": "Heshengtao",
    "email": "hst97@qq.com"
  },
  "license": "AGPL-3.0",
  "build": {
    "appId": "com.superagent.party",
    "productName": "Super-Agent-Party",
    "copyright": "Copyright © 2025 Heshengtao",
    "publish": {
      "provider": "github",
      "owner": "heshengtao",
      "repo": "super-agent-party",
      "releaseType": "draft"
    },
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!**/*.{pyc,pyo,pyd}",
      "!py/",
      "!super/",
      "!kb/",
      "!uploaded_files/",
      "!build/",
      "!release/",
      "!**/__pycache__/",
      "!server.py"
    ],
    "extraResources": [
      {
        "from": "dist/server/",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "icon": "static/source/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "mac": {
      "icon": "static/source/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-Mac.${ext}",
      "category": "public.app-category.utilities",
      "identity": "super-agent-party",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "type": "distribution",
      "asarUnpack": "**/*.node",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      },
      "provisioningProfile": null
    },
    "dmg": {
      "icon": "static/source/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "static/source/icon.png",
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis"
      ],
      "publisherName": "Heshengtao",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^33.0.1",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "cli-progress": "^3.12.0",
    "electron-dl": "3.5.0",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.4",
    "osc": "^2.4.5",
    "sharp": "^0.34.4",

    "@element-plus/icons-vue": "^2.3.1",
    "@pixiv/three-vrm": "^3.4.2",
    "@pixiv/three-vrm-animation": "^3.4.2",
    "@sparkjsdev/spark": "^0.1.9",
    "driver.js": "^1.3.6",
    "element-plus": "^2.10.3",
    "three": "^0.178.0",
    "vue": "^3.5.17"
  }
}
